{
  "type": "APL",
  "version": "2023.3",
  "theme": "dark",
  "import": [{ "name": "alexa-layouts", "version": "1.7.0" }],
  "mainTemplate": {
    "parameters": ["jeedomData"],
    "items": [
      {
        "type": "Container",
        "width": "100vw",
        "height": "100vh",
        "alignItems": "center",
        "justifyContent": "center",
        "items": [
          {
            "type": "Image",
            "source": "${jeedomData.logo}",
            "width": "30vw",
            "height": "30vh",
            "scale": "best-fit",
            "align": "center"
          },
          {
            "type": "Text",
            "text": "${jeedomData.text}",
            "fontSize": "7vh",
            "fontWeight": "300",
            "textAlign": "center",
            "color": "#FFFFFF",
            "paddingTop": "5vh",
            "paddingLeft": "5vw",
            "paddingRight": "5vw",
            "maxLines": 4
          },
          {
            "when": "${jeedomData.hasEvent}",
            "type": "Container",
            "direction": "row",
            "alignItems": "center",
            "justifyContent": "center",
            "paddingTop": "5vh",
            "items": [
              {
                "type": "AlexaButton",
                "buttonText": "Oui",
                "primaryAction": { "type": "SendEvent", "arguments": ["yes"] },
                "buttonStyle": "contained",
                "colorTheme": "primary",
                "width": "20vw",
                "height": "8vh"
              },
              { "type": "Frame", "width": "5vw" },
              {
                "type": "AlexaButton",
                "buttonText": "Non",
                "primaryAction": { "type": "SendEvent", "arguments": ["no"] },
                "buttonStyle": "contained",
                "colorTheme": "secondary",
                "width": "20vw",
                "height": "8vh"
              }
            ]
          },
          {
            "type": "Text",
            "text": "Powered by Jeedom",
            "fontSize": "3vh",
            "fontWeight": "100",
            "color": "#AAAAAA",
            "paddingTop": "8vh"
          }
        ]
      }
    ]
  }
}
